{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "lib": ["es6", "dom", "esnext"],
    "rootDir": ".",
    "allowJs": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules"],
    "baseUrl": "./packages",
    "paths": {
      "@uai-nebula/*": ["./*/src"]
    }
  },
  "include": [
    "global.d.ts",
    "shims.d.ts",
    "packages/*/src/**/*",
    "packages/*/package.json"
  ],
  "exclude": [
    "node_modules",
    "packages/*/node_modules",
    "**/*.test.ts",
  ]
}
